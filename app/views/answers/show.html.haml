%p#notice= notice

%h3
  Question:
  -#= @answer.question.title

%h1
  = @answer.name
= link_to "<i class='social foundicon-torso'></i> #{@answer.display_author}".html_safe, @answer.user,  :class => "user-link"

-#%p
-#  %b Name:
-#  = @answer.name

%p
  %b Content:
  = @answer.content

%p
  #voting
    = pluralize @answer.reputation_for(:votes).to_i, "vote"
    -#- if current_user && !current_user.voted_for?(haiku)
    |
    = link_to "<i class='social foundicon-thumb-up'></i>  ".html_safe, vote_answer_path(@answer, type: "up"), method: "post"
    |
    = link_to "<i class='social foundicon-thumb-down'></i>  ".html_safe, vote_answer_path(@answer, type: "down"), method: "post"

  -if current_user ==  @answer.user
    = link_to 'Edit', edit_answer_path(@answer)
    \|
  = link_to "<i class='foundicon-left-arrow'></i>  ".html_safe, answers_path


= link_to 'Edit', edit_answer_path(@answer)
\|
= link_to 'Back', question_path(@question)
